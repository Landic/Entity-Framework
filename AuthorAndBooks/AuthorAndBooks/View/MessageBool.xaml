<Window x:Class="AuthorAndBooks.View.MessageBool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthorAndBooks.View"
        mc:Ignorable="d"
        Title="MessageBool" MaxHeight="150" MaxWidth="320" MinHeight="150" MinWidth="320">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"  Margin="10" HorizontalAlignment="Center" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Нет" Command="{Binding NoCommand}" Width="100" Height="30" Margin="10" />
                <Button Content="Да" Command="{Binding YesCommand}" Width="100" Height="30" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
