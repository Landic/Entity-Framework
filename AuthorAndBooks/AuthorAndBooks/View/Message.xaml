<Window x:Class="AuthorAndBooks.View.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthorAndBooks.View"
        mc:Ignorable="d"
        Title="Message" MaxHeight="140" MaxWidth="250" MinHeight="140" MinWidth="250">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Message}" Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Command="{Binding OkCommand}" Width="100" Height="30" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
